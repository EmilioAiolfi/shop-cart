.product
	position: relative
	border-radius: 5px
	font-size: 12px
	overflow: hidden
	padding: 10px 10px 50px
	box-shadow: 1px 2px 5px #ddd
	background-color: light-color

	img
		display: block
		width: 100%
		height: 230px
		margin-bottom: 10px

	.product-title
		font-weight: normal

	.button
		position: absolute
		bottom: 10px

	.price
		margin: 10px 0
		font-size: 14px

		.installment
			color: lighten-color
			strong
				font-weight: normal
		.int
			font-size: 22px
			font-weight: bold
			display: inline-block
			margin:0 3px
